<p id="notice"><%= notice %></p>

<h1>蔵書管理システム</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Author name</th>
      <th>Price</th>
      <th>Publish company</th>
      <th>Published date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.author_name %></td>
        <td><%= book.price %></td>
        <td><%= book.publish_company %></td>
        <td><%= book.published_date %></td>
        <td><% if book.photo_link == null%>
          <%= image_tag('http://www.town.minamiechizen.lg.jp/kurasi/103/bunka/p001445_d/img/022.jpg',:size => '32x32')%>
        <% else %>
          <%= image_tag(book.photo_link,:size => '32x32'%>
        <% end %>
        </td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
